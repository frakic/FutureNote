@model FutureNote.Web.Models.NoteViewModel

@{
    ViewData["Title"] = "Open a note";
}

<h1>Future note</h1>

<div>
    <hr />
    <p>This note was sealed until @Model.SealedUntil.ToShortDateString()</p>
    <p>You can be the first to open it.</p>

            <form asp-action="Open">
                <div class="form-group">
                    <input asp-for="Id" hidden/>
               </div>
                <div class="form-group">
                    <input type="submit" value="Read" class="btn btn-primary" />
                </div>
            </form>
</div>